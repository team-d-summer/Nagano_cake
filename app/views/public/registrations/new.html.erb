<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-9 mx-sm-auto text-center shadow-lg">
    <h2>新規会員登録</h2>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <td>
        <p><%= f.label "名前" %></p>
        </td>
        <td>
        <p>
          (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "田中" %>
          (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "太郎" %></p>
        </td>
        </tr>
        
        <tr>
          <td>
            <p><%= f.label "フリガナ" %></p>
          </td>
          <td>
            <p>(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder: "タナカ" %>
            　(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder: "タロウ" %></p>
          </td>
        </tr>
        
        <tr>
          <td>
            <p><%= f.label "メールアドレス" %></p>
          </td>
          <td>
            <p><%= f.email_field :email, autofocus: true, autocomplete: "email"%></p>
          </td>
          </tr>
          
          <tr>
            <td>
              <p><%= f.label "郵便番号(ハイフンなし)" %></p>
            </td>
            <td>
              <p><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder: "0000000" %></p>
            </td>
           </tr>
           
           <tr>
             <td>
               <p><%= f.label "住所" %></p>
              </td>
              <td>
                <p><%= f.text_field :address, autofocus: true,autocomplete: "address",placeholder: "" %></p>
                </td>
           </tr>
           
           <tr>
             <td>
               <p><%= f.label "電話番号(ハイフンなし)" %></p>
              </td>
                <td>
                  <p><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder: "0000000000" %></p>
                </td>
           </tr>
           
           <tr>
             <td><%= f.label "パスワード(6文字以上)" %>
             <td><%= f.password_field :password %></td>
             </td>
           </tr>
           
           <tr>
             <td>
               <%= f.label "パスワード(確認用)" %>
            </td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
           </tr>
    </table>
    <div>
       <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-info mt-5" %>
    </div>
    <% end %>
    </div>
  </div>
</div>

<p>既に登録済みの方</p>
<br>
<%= link_to "こちら", new_customer_session_path %>からログインしてください。

