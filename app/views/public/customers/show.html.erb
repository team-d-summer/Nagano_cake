<div class="container">
  <div class="row no-gutters">
    <div class="col-md-9 mx-sm-auto text-center shadow-lg">
        <h2>登録情報</h2>
        <div class="text-success">
          <%= flash[:notice] %>
        </div>
        
        <table>
            <tr>
                <td>名前</td>
                <td>
                    <%= @customer.last_name %> <%= @customer.first_name %>
                </td>
           </tr>
           <tr>
               <td>フリガナ</td>
               <td>
                   <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
                </td>
           </tr>
           <tr>
               <td>メールアドレス</td>
               <td>
                   <%= @customer.email %>
                </td>
           </tr>
           <tr>
               <td>郵便番号</td>
               <td>
                   <%= @customer.postal_code %>
                </td>
           </tr>
           <tr>
               <td>住所</td>
               <td>
                   <%= @customer.address %>
                </td>
           </tr>
           <tr>
               <td>電話番号</td>
               <td>
                   <%= @customer.telephone_number %>
                </td>
           </tr>
           <tr>
               <td><%= link_to "編集する",  edit_customer_path %></td>
           </tr>
          </table>
          
          <h2>配送先　</h2>
          <div><%= link_to "一覧を見る",   addresses_path %></div>
          
          <h2>注文履歴</h2>
          <div><%= link_to "一覧を見る",  orders_path %></div>
        </div>
    </div>
</div>