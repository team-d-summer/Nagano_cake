<div class="container px-5 px-sm-0">

 <div class="row">
  <div class="mt-5 offset-md-1">
   <h2>
    <span class="bg-secondary">
     <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </span>
    </h2>
  </div>
 </div>

 <div class="row">
  <div class="mt-5">
   <table class="table table-borderless">
   <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
   </tr>
   <tr>
    <td>氏名</td>
    <td>
     <%= @customer.last_name %> <%= @customer.first_name %>
    </td>
   </tr>
   <tr>
    <td>カナ</td>
    <td>
     <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
    </td>
   </tr>
   <tr>
    <td>郵便番号</td>
    <td>
     <%= @customer.post_code %>
    </td>
   </tr>
   <tr>
    <td>住所</td>
    <td>
     <%= @customer.address %>
    </td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td>
     <%= @customer.phone_number %>
    </td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td>
     <%= @customer.email %>
    </td>
   </tr>
   <tr>
    <td>会員ステータス</td>
    <% if @customer.is_deleted == false %>
     <td><p class="text-success">有効</p></td>
    <% else %>
     <td><p class="text-muted">退会</p></td>
    <% end %>
   </tr>
   <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %></td>
    <td><%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-primary' %></td>
   </tr>
   </table>
  </div>
 </div>
</div>
