<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="mt-5">
      <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました。:
      <ul>
       <% @customer.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
      <% end %>
    </div>
 </div>
 <div class="row">
  <div class="mt-5 offset-md-1">
   <h2>
    <span class="bg-secondary">
     <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </span>
    </h2>
  </div>
 </div>
 <div class="row">
  <div class="mt-5">
   <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
   <table class="table table-borderless">
   <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
   </tr>
   <tr>
    <td>氏名</td>
    <td>
     <%= f.text_field :last_name %>
    </td>
    <td>
     <%= f.text_field :first_name %>
    </td>
   </tr>
   <tr>
    <td>カナ</td>
    <td>
     <%= f.text_field :last_name_kana %>
    </td>
    <td>
     <%= f.text_field :first_name_kana %>
    </td>
   </tr>
   <tr>
    <td>郵便番号</td>
    <td>
     <%= f.text_field :postal_code %>
    </td>
   </tr>
   <tr>
    <td>住所</td>
    <td>
     <%= f.text_field :address %>
    </td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td>
     <%= f.text_field :telephone_number %>
    </td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td>
     <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </td>
   </tr>
   <tr>
    <td>会員ステータス</td>
     <td>
     <%= f.label :is_deleted, '有効', value: false %>
     <%= f.radio_button :is_deleted, 'false' %>
     <%= f.label :is_deleted, '退会', value: true %>
     <%= f.radio_button :is_deleted, 'true' %>
    </td>
   </tr>
   <tr>
    <td></td>
    <td><%= f.submit "変更を保存", class: 'btn btn-success btn-sm' %></td>
   </tr>
   </table>
   <% end %>
  </div>
 </div>
</div>