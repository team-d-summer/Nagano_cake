<div class='container'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <%= render 'layouts/errors', obj: @genre %>
            <h2>ジャンル一覧・追加</h2>
            <%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class:'form-control book_title' %>
                </div>
                <div class="form-group">
                    <%= f.submit class:'btn btn-success' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<div class='container'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                    <th>ジャンル</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each { |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
                </tr>
                <% } %>
            </tbody>
            </table>
        </div>
    </div>
</div>