<div class="container">
  <div class="row mt-5">
    <h3 class="mb-5 ml-5">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.get_image, size: '300x200' %>
    </div>
    <div class="col-md-8">
      <div class="form-group row">
        <p class="col-3 h5">商品名</p>
        <p class="col-8"><%= @item.name %></p>
      </div>
      <div class="form-group row">
        <p class="col-3 h5">商品説明</p>
        <p class="col-8"><%= @item.introduction %></p>
      </div>
      <div class="form-group row">
        <p class="col-3 h5">ジャンル</p>
        <p class="col-8"><%= @item.genre.name %></p>
      </div>
      <div class="form-group row">
        <p class="col-3 h5">税込価格<br>(税抜価格)</p>
        <p class="col-8"><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</p>
      </div>
      <div class="form-group row">
        <p class="col-3 h5">販売ステータス</p>
        <p class="col-8"><%= @item.is_active ? '販売中' : '販売停止中' %></p>
      </div>
    </div>
  </div>
  <div class="form-group text-center my-5">
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success btn-lg" %>
    </div>
</div>