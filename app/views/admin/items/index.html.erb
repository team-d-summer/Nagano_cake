<div class="container my-5">
  <div class="row">
    <div class="col-10">
      <h3><span class="bg-light bg-gradient">商品一覧</span></h3>
    </div>
    <div class="col-2 ml-auto">
      <%= link_to " + ", new_admin_item_path, class: "btn btn-light rounded-circle" %>
    </div>

            <table class='table table-hover table-inverse'>
              <thead>
                <tr class="bg-light">
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @item.each do |item| %>
                  <tr>
                      <td><%= item.id %></td>
                      <td><%= link_to item.name, admin_item_path(item.id)%></td>
                      <td><%= item.price %></td>
                      <td><%= item.genre.name %></td>
                      <td>
                      <%if item.is_active == true %>
                        <strong class="text-success">販売中</strong>
                        <% else %>
                        <strong class="text-muted">販売停止中</strong>
                        <% end %>
                        </td>
                  </tr>
                      <% end %>
                </tbody>
            </table>
            <%= paginate @item %>
        </div>
    </div>
</div>